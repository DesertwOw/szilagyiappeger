<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="50dp"
        android:paddingBottom="50dp">

        <ImageView
            android:id="@+id/anniversary_logo"
            android:layout_width="300dp"
            android:layout_height="210dp"
            android:src="@drawable/splash" />



        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/marshall_logo"
                android:layout_width="180dp"
                android:layout_height="300dp"
                android:src="@drawable/marshall_logo"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/ai_logo"
                android:layout_width="180dp"
                android:layout_height="300dp"
                android:src="@drawable/ai"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/sponsor_text"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="@string/ev"
            android:textSize="16sp"
            android:textColor="@color/primary_pantone_orange"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</FrameLayout>
